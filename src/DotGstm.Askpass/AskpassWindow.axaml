<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="DotGstm.Askpass.AskpassWindow"
        Title="Askpass: Enter Password"
        Width="350"
        Height="120"
        WindowStartupLocation="CenterScreen"
        CanResize="false"
        ShowInTaskbar="true">

    <Window.Styles>
        <Style Selector="Button">
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="12,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </Window.Styles>

    <DockPanel Margin="5,12,5,5">
        <!-- Button Panel (Bottom) -->
        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">

            <!-- Cancel Button -->
            <Button Name="BtnCancel"
                    Content="Cancel(C)"
                    HotKey="Alt+C"
                    Click="BtnCancel_Click">
                <Button.Styles>
                    <Style Selector="Button">
                        <Setter Property="Background" Value="#F0F0F0"/>
                    </Style>
                </Button.Styles>
            </Button>

            <!-- OK Button -->
            <Button Name="BtnOk"
                    Content="OK(O)"
                    HotKey="Alt+O"
                    IsDefault="True"
                    Click="BtnOk_Click">
                <Button.Styles>
                    <Style Selector="Button">
                        <Setter Property="Background" Value="#E3F2FD"/>
                    </Style>
                </Button.Styles>
            </Button>
        </StackPanel>

        <!-- Main Content Area -->
        <StackPanel Spacing="5">
            <!-- Prompt Message -->
            <TextBlock Name="PromptText"
                       Text="Please enter your password:"
                       FontFamily="monospace"
                       FontSize="12"
                       TextWrapping="Wrap"/>

            <!-- Password Input Box -->
            <StackPanel Orientation="Horizontal" Spacing="4">
                <TextBox Name="PasswordBox"
                         Width="300"
                         PasswordChar="â—"
                         Watermark="Password"
                         IsVisible="True"/>

                <TextBox Name="PasswordTextBox"
                         Width="300"
                         Watermark="Password"
                         IsVisible="False"/>

                <!-- Show/Hide Password Toggle -->
                <ToggleButton Name="ShowPasswordToggle"
                              Width="30"
                              Height="30"
                              Click="ShowPasswordToggle_Click"
                              ToolTip.Tip="Show/Hide Password">
                    <Path Data="M12,9A3,3 0 0,0 9,12A3,3 0 0,0 12,15A3,3 0 0,0 15,12A3,3 0 0,0 12,9M12,17A5,5 0 0,1 7,12A5,5 0 0,1 12,7A5,5 0 0,1 17,12A5,5 0 0,1 12,17M12,4.5C7,4.5 2.73,7.61 1,12C2.73,16.39 7,19.5 12,19.5C17,19.5 21.27,16.39 23,12C21.27,7.61 17,4.5 12,4.5Z"
                          Fill="Gray"
                          Width="20"
                          Height="20"
                          Stretch="Uniform"/>
                </ToggleButton>
            </StackPanel>
        </StackPanel>
    </DockPanel>

</Window>
